<style>
  /* music-note wird in global css geregelt*/

  /* ANCHOR Animation */
  .animation {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  .animation {
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 3%;
    width: 80%;
    margin-left: 5%;
    /* Höhe der Border-Box, legt die Mindesthöhe eines Elements fest*/
    /* Relativ zu 1 % der Breite des Ansichtsfensters */
    min-height: 10vw;
    background: #252839;
  }

  h3 {
    position: relative;
    /* Schriftgröße dahinter vw ist responsiv*/
    font-size: 4vw;
    color: #252839;
    /* gibt die Breite und die Farbe von Strichen an Schrift dahinter*/
    -webkit-text-stroke: 0.1vw #383d52;
    /* Es wird alles groß geschrieben */
    text-transform: uppercase;
  }

  h3::before {
    content: attr(data-text);
    position: absolute;
    /* Schriftweite davor die läuft vw ist responsiv gegenüber px */
    font-size: 4vw;
    /* Text bleibt bei 1 am Ende stehen, bei 0 ist es leer */
    width: 1;
    /* Höhe des Cursors */
    height: 110%;
    color: #01f387;
    /* Breite und Farbe des laufenden Textes Schrift davor*/
    -webkit-text-stroke-width: 0.1vw #383d52;
    /* Die Stärke des Strichs */
    border-right: 2px solid #01fe87;
    overflow: hidden;
    animation: animate 6s 3 linear;
  }

  @keyframes animate {
    0%,
    10%,
    100% {
      width: 0;
    }
    70%,
    90% {
      width: 100%;
    }
  }

  /* ANCHOR Hauptseite */
  .conteneur {
    color: var(--color-white);
    background-color: var(--color-black);
    border: 0px solid black;
    align-content: space-between;
    width: 94vw;
    font-style: normal;
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    flex-wrap: wrap;
    align-content: flex-start;
  }

  /* Container Inhalt */
  .marchandise {
    padding: 10px 20px;
  }

  /* Kind Elemente */
  .marchandise-1 {
    flex: 2;
  }

  .marchandise-2 {
    flex: 1;
  }

  .conteneur ul li {
    color: var(--color-white);
    background-color: var(--color-black);
    height: 3rem;
    box-shadow: 2px 2px 5px #666;
    margin-top: 15px;
    padding: 0.3rem 1.875rem;
    font-size: large;
    list-style-type: none;
  }

  .conteneur img {
    width: 90%;
    height: auto;
    max-width: 100%;
    margin-left: 0%;
    box-shadow: 2px 2px 5px #666;
  }

  a {
    text-decoration: none;
  }

  /* ANCHOR Style für Cookie Banner */
  #footer-cookie,
  #footer-cookie * {
    box-sizing: border-box;
  }

  #footer-cookie {
    display: none;
    position: fixed;
    bottom: 0px;
    left: 0px;
    width: 100%;
    height: 150px;
    padding-left: 30px;
    padding-right: 30px;
    line-height: 150px;
    background: #303030;
    color: #fff;
    font-size: medium;
  }

  #footer-cookie a {
    color: #fff;
  }

  #footer-cookie #description {
    float: left;
  }

  #footer-cookie #accept {
    float: right;
  }

  #footer-cookie #accept a {
    border: 1px solid #fff;
    padding: 5px 10px;
    text-decoration: none;
  }

  @media (max-width: 1200px) {
    #footer-cookie {
      padding-top: 30px;
      padding-bottom: 30px;
      line-height: inherit;
      height: auto;
    }

    #footer-cookie #description {
      width: 100%;
    }

    #footer-cookie #accept {
      width: 100%;
      margin-top: 15px;
    }

    #footer-cookie #accept a {
      width: 100%;
      display: block;
      text-align: center;
    }
  }
</style>
