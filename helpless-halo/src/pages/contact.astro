---
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Contact Form 2"
  description="Kostenloser Probeunterricht"
  keywords="Kontakt"
>
  <div class="container">
    <h2>Contact Me</h2>
    <form
      method="POST"
      name="Contact Form 2"
      action="/thankyou/"
      data-netlify-recaptcha="true"
      data-netlify="true"
    >
      <fieldset>
        <legend>Daten</legend>
        <input type="hidden" name="form-name" value="Contact Form 2" />
        <div class="formfields"></div>
        <br />
        <div class="form-element">
          <input
            type="date"
            name="born"
            id="born"
            class="form-control form-control-lg"
          />
          <div class="invalid-feedback">Geburtsdatum</div>
        </div>
        <br />
        <div class="form-element">
          <input
            type="datetime-local"
            name="desired_date"
            id="desired_date"
            class="form-control form-control-lg"
          />
          <div class="invalid-feedback">Wunschtermin mit Uhrzeit</div>
        </div>
        <br />
        <div class="form-element">
          <input
            type="tel"
            name="phone"
            id="phone"
            placeholder="Telefonnummer *"
            class="form-control form-control-lg"
          />
          <div class="invalid-feedback">Telefonnummer</div>
        </div>
        <br />
        <div>
          <input
            type="text"
            name="instrument"
            id="instrument"
            class="form-control form-control-lg"
          />
          <div class="invalid-feedback">Instrument</div>
        </div>
        <br />
        <div>
          <input
            type="email"
            name="email"
            id="email"
            class="form-control form-control-lg"
          />
          <div class="invalid-feedback">Email</div>
        </div>
        <br />
        <br />
        <div>
          <br />
          <textarea
            name="comments"
            id="comments"
            cols="23"
            rows="10"
            class="form-control"
            placeholder="Wie kann ich Ihnen helfen? *"></textarea>
          <div class="invalid-feedback">Nachricht</div>
        </div>
      </fieldset>
      <fieldset>
        <legend>Adresse</legend>
        <div>
          <input
            type="text"
            name="fname"
            id="fname"
            placeholder="Vorname *"
            class="form-control form-control-lg"
          />
          <div class="invalid-feedback">Vorname</div>
        </div>
        <br />
        <div>
          <input
            type="text"
            name="lname"
            id="lname"
            placeholder="Nachname *"
            class="form-control form-control-lg"
          />
          <div class="invalid-feedback">Nachname</div>
        </div>
        <br />
        <div>
          <input
            type="text"
            name="street"
            id="street"
            maxlength="22"
            class="form-control form-control-lg"
          />
          <div class="invalid-feedback">Strasse</div>
        </div>
        <br />
        <div>
          <input
            type="text"
            name="place"
            id="place"
            maxlength="20"
            class="form-control form-control-lg"
          />
          <div class="invalid-feedback">Ort</div>
        </div>
        <br />
        <div>
          <input
            type="number"
            name="postal_code"
            id="postal_code"
            placeholder="Postleitzahl *"
            class="form-control form-control-lg"
          />
          <div class="invalid-feedback">Postleitzahl</div>
        </div>
      </fieldset>
      <br />
      <fieldset>
        <div>
          <input
            type="text"
            name="parents"
            id="parents"
            class="form-control form-control-lg"
          />
          <div class="invalid-feedback">Eltern</div>
        </div>
      </fieldset>
      <br />
      <div data-netlify-recaptcha="true"></div>
      <div>
        <button type="submit" class="btn btn-lg btn-primary">Senden</button>
      </div>
    </form>
  </div>

  <h2>Freie Termine</h2>

  <div>
    <!-- Tabelle für freie Termine-->
    <table class="table2">
      <thead>
        <tr>
          <th>Dienstag</th>
          <th>Mittwoch</th>
          <th>Donnerstag</th>
          <th>Freitag</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>14:00</td>
          <td>15:00</td>
          <td>15:30</td>
          <td>15:15</td>
        </tr>
        <tr>
          <td>15:30</td>
          <td>15:30</td>
          <td>16:00</td>
          <td>16:30</td>
        </tr>
        <tr>
          <td>16.00</td>
          <td>16:00</td>
          <td>16:30</td>
          <td>17:30</td>
        </tr>
      </tbody>
    </table>
    <br />
    <p>
      <a href="../index.html" class="link-blue">zurück</a>
    </p>
    <br />
  </div>
</Layout>

<style>
  .container {
    margin: 0 auto;
    padding: 5%;
    box-sizing: border-box;
  }

  /* ANCHOR Custom Properties */
  body {
    font-family: var(--font);
    color: var(--color-white);
    background-color: var(--color-black);
    text-align: center;
  }

  h1 {
    font-size: 3.68rem;
    color: rgb(218, 54, 54);
    font-weight: 600;
    padding: 1.25rem;
  }

  h2 {
    color: rgb(218, 54, 54);
    font-size: 2.5rem;
  }

  p {
    color: #fff;
    text-align: center;
    font-size: 1.25rem;
  }

  small {
    color: white;
    font-size: 1rem;
  }

  fieldset legend {
    color: #828282;
    font-size: 1.5rem;
    padding: 0.625rem;
  }

  fieldset {
    color: #828282;
    /*background-color: #191919; */
  }

  /* ganze Formular */
  .form-element {
    /*background-color: #1b1c1e; */
  }

  /* Beschreibung der Felder unten */
  .invalid-feedback {
    /*background-color: #1b1c1e; */
    color: #828282;
    font-size: 1.125rem;
    padding: 0.625rem;
  }

  /* Der Rand um die Felder */
  .form-control {
    border-radius: 0px;
    border: 1px solid #333;
  }

  /* Die Breite der Felder */
  .form-control.form-control-lg {
    height: calc(3.5rem + 2px);
    padding: 1rem 0.75rem;
    font-size: 1.125rem;
  }

  form {
    max-width: 31.25rem;
    margin: 0 auto;
    text-align: left;
    padding: 1.25rem 0;
    font-size: 1.125rem;
  }

  select,
  option {
    display: block;
    margin: 0 auto;
    width: 100%;
    color: #828282;
    text-align: center;
    font-size: 1.125rem;
  }

  .form-control::placeholder {
    font-size: 1.125rem;
  }

  /* Schriftgröße im Ausfüllbereich */
  input,
  textarea {
    /*background-color: #1b1c1e; */
    color: var(--color-white);
    background-color: var(--color-black);
    font-family: "Poppins", sans-serif;
    font-size: 1.125rem;
    /*color: #fff; */
    font-size: 1.125rem;
    padding: 0.625rem;
  }

  .btn {
    border-radius: 0;
    border: 0;
    color: white;
  }

  .btn.btn-primary {
    background-color: #545557;
    padding: 0.94rem 7rem;
    font-size: 1.125rem;
    margin-top: 1.875rem;
    cursor: pointer;
    transition: all 0.3 ease;
    text-align: center;
  }

  .btn.btn-primary:hover {
    background-color: #fff;
    color: black;
  }

  .table2 {
    width: 90%;
    border-collapse: collapse;
    text-align: center;
    background: #1b1c1e;
    box-shadow: 2px 2px 5px #666666;
    margin: 0 auto;
    color: #fff;
  }

  .table2 th {
    font-size: 1.125rem;
  }

  .table2 td {
    font-size: 1.125;
    padding: 0.2rem 0.2rem;
  }

